#include <stdio.h>
#include <stdlib.h>

typedef struct node{
  int value;
  struct node *next;
}node;

typedef struct queue{
  node *start;
  node *end;
}queue;

void push(queue *q, int number){
  node *new = (node*) malloc(sizeof(node));
  new->next = NULL;
  new->value = number;

  if(q->start==NULL){
    q->start = new;
    q->end = new;
    return;
  }
  q->end->next = new;
  q->end=new;
}

void pop(queue *q){
  if (q->start==NULL){
    printf("Empty Queue");
    return;
  }
  node *aux = q->start;
  q->start = aux->next;
  free(aux);
}

void printQueue(queue *q){
  node *aux = q->start;
  while (aux){
    printf("%d ", aux->value);
    aux = aux->next;
  }
  printf("\n");
}


queue *initialization(){
  queue *head = (queue*) malloc(sizeof(queue));
  if (head != NULL){
    head->start = NULL;
    head->end = NULL;
  }
  return head;
}

int main(void){
  queue *head = initialization();

  int number;
  char selection[2];

  while(1){
    printf("Add a number in the queue [-0 To finish]: ");
    scanf("%d", &number);
    if(number==0){
      break;
    }
    push(head, number);
  }
  printQueue(head);
  
  while(1){
    printf("Do you want to remove the next element? [Y/N]: ");
    scanf(" %c", &selection[0]);
    selection[1] = '\0';
    if (selection[0] == 'N' || selection[0] == 'n'){
      break;
    }
    pop(head);
    printQueue(head);
  }

  return 0;
}
